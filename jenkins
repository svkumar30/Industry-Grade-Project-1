pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "vijay1453/abcapp"
        WORK_DIR = "/var/lib/jenkins/workspace/CI-CD-IGP"
    }

    stages {
        stage('Code Checkout') {
            steps {
                git 'https://github.com/svkumar30/Industry-Grade-Project-1.git'
            }
        }

        stage('Code Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'cp ${WORK_DIR}/target/ABCtechnologies-1.0.war abc_tech.war'
                sh 'docker build -t ${DOCKER_IMAGE}:$BUILD_NUMBER .'
               
            }
        }

        stage('Push Docker Image') {
            steps {
                withDockerRegistry([credentialsId: "vijay1453-dockerhub", url: ""]) {
                    sh 'docker push ${DOCKER_IMAGE}:$BUILD_NUMBER'
                    //sh 'docker push ${DOCKER_IMAGE}:latest'
                }
            }
        }

        stage('Deploy as container') {
            steps {
                sh 'docker run -itd -p 9090:9090 ${DOCKER_IMAGE}:$BUILD_NUMBER'
            }
        }

        stage('Deploy to k8s cluster') {
            steps {
                sh 'kubectl set image deployment/abcapp abcapp=${DOCKER_IMAGE}:$BUILD_NUMBER'
            }
        }
    }

    post {
        always {
            sh 'docker rm -f abcapp || true'
            sh 'docker rmi $(docker images -f "dangling=true" -q) || true'
        }
    }
}


